# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o # or gpt-4o-mini

# WordPress Configuration
WP_URL=https://your-wordpress-site.com
WP_USERNAME=your_wordpress_username
WP_PASSWORD=your_wordpress_application_password

# Tavily API Configuration
TAVILY_API_KEY=your_tavily_api_key_here

# Blog Post Configuration
# Default category ID for posts (use this to bypass category name lookup)
# Find category IDs in WP Admin: Posts > Categories > hover over "Edit" link to see tag_ID=X
DEFAULT_CATEGORY_ID=1
# Default category name for posts (only used if DEFAULT_CATEGORY_ID is not set)
DEFAULT_CATEGORY_NAME=Uncategorized
# Comma-separated list of default tags
DEFAULT_TAGS=ai,generated,content
# Post status: 'draft' or 'publish'
DEFAULT_STATUS=draft 